{
 "manifest_version": 2,
 "name": "BetterTab",
 "description": "A new and improved new tab page. Includes better design and daily news for a better experience.",
 "version": "1",
 "author": "Aditeya Shukla",

 "web_accessible_resources": ["script4.js"],
 "browser_action": {
   "default_icon": "tab-icon.png",
   "default_title": "Have a good day"
 },
"chrome_url_overrides" : {
  "newtab": "newtab.html"
},
"background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "identity",
    "identity.email"
  ]

}
